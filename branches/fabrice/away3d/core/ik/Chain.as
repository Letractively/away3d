package away3d.core.ik{	import away3d.core.ik.Bone;	import away3d.core.ik.Base;	import flash.geom.Matrix;	    public class Chain    {				public var _x:Number;		public var _y:Number;		public var _z:Number;		public var _base:Base;				public var _matrix:Matrix;				public var _aBones:Array;			   		function Chain(x:Number,y:Number,z:Number):void		{			this._x = x;			this._y = y;			this._z = z;			this._matrix = new Matrix();			this._aBones = new Array();		}				public function get bones():Number		{			return this._aBones;		}				public function set bones(abones:Array):void		{				this._aBones = new Array();			// might need to set all bones to null here...			this._aBones = abones.concat();		}				public function addBone(x:Number,y:Number,z:Number, length:Number):void		{			this._aBones.push(new Bone(x,y,z,length));		}				public function removeBone(index:int):void		{			this._aBones.splice(index, 1);		}				public function get matrix():Number		{			return this._matrix;		}				public function set matrix(mat:Matrix):void		{			this._matrix = mat;		}				public function get x():Number		{			return this._x;		}				public function set x(value:Number):void		{			if (value == this._x)			return;			this._x = value;		}				public function get y():Number		{			return this._y;		}				public function set y(value:Number):void		{			if (value == this._y)			return;			this._y = value;		}		public function get z():Number		{			return this._z;		}				public function set z(value:Number):void		{			if (value == this._z)			return;			this._z = value;		}    }}