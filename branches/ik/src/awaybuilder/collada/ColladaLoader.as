package awaybuilder.collada{	import flash.events.Event;	import flash.net.URLLoader;				/**	 * @author andreasengstrom	 */	public class ColladaLoader extends URLLoader	{		private var _collada : XML ;								public function ColladaLoader ( )		{			this.addEventListener ( Event.COMPLETE , this.onLoadComplete ) ;		}								////////////////////		// EVENT HANDLERS //		////////////////////								private function onLoadComplete ( event : Event ) : void		{			this.removeEventListener ( Event.COMPLETE , this.onLoadComplete ) ;			this._collada = ColladaUtil.removeNamespaces ( this.data ) ;		}						/////////////////////////		// GETTERS AND SETTERS //		/////////////////////////								public function get collada ( ) : XML		{			return this._collada ;		}	}}